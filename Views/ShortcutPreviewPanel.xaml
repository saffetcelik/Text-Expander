<UserControl x:Class="OtomatikMetinGenisletici.Views.ShortcutPreviewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="771" d:DesignWidth="233"
             ToolTipService.InitialShowDelay="0"
             ToolTipService.ShowDuration="10000">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Card Style - Kompakt -->
        <Style x:Key="PreviewCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1"
                                      BlurRadius="4" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Shortcut Item Style - Okunabilir boyut -->
        <Style x:Key="ShortcutItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#FAFBFC"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F4FD"/>
                    <Setter Property="BorderBrush" Value="#90CAF9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Header Style - Kompakt -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#37474F"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Shortcut Key Style - Okunabilir -->
        <Style x:Key="ShortcutKeyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!-- Preview Text Style - Okunabilir -->
        <Style x:Key="PreviewTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="MaxHeight" Value="16"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Content -->
        <Border Style="{StaticResource PreviewCardStyle}" Background="#FAFBFC">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- Header - Kompakt -->
            <Grid Grid.Row="0" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Kısayollar" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ShortcutCount, StringFormat='({0})'}"
                               FontSize="9" Foreground="#9E9E9E" VerticalAlignment="Center" Margin="3,0,8,0"/>

                    <!-- Aktif Tuş Kombinasyonu -->
                    <Border x:Name="ShortcutKeyBorder"
                            Background="#E8F5E8"
                            CornerRadius="4"
                            Padding="4,2"
                            VerticalAlignment="Center"
                            Margin="4,0,0,0"
                            MouseEnter="ShortcutKeyBorder_MouseEnter"
                            MouseLeave="ShortcutKeyBorder_MouseLeave">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="⌨️" FontSize="8" VerticalAlignment="Center" Margin="0,0,2,0"/>
                            <TextBlock Text="{Binding ActiveTriggerKey, Mode=OneWay}"
                                       FontSize="8"
                                       FontWeight="SemiBold"
                                       Foreground="#2E7D32"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Tab Tuşu Tamamlama -->
                    <Border x:Name="TabKeyBorder"
                            Background="#E3F2FD"
                            CornerRadius="4"
                            Padding="4,2"
                            VerticalAlignment="Center"
                            Margin="3,0,0,0"
                            MouseEnter="TabKeyBorder_MouseEnter"
                            MouseLeave="TabKeyBorder_MouseLeave">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="⇥" FontSize="8" VerticalAlignment="Center" Margin="0,0,2,0"/>
                            <TextBlock Text="Tab"
                                       FontSize="8"
                                       FontWeight="SemiBold"
                                       Foreground="#1976D2"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Click-Through Checkbox ve Minimize Button -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Modern Click-Through Toggle -->
                    <Border x:Name="ClickThroughToggle"
                            Background="#F5F5F5"
                            CornerRadius="12"
                            Padding="8,4"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="ClickThroughToggle_Click"
                            ToolTipService.InitialShowDelay="0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E8F5E8"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsClickThroughEnabled}" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsClickThroughEnabled}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="#BBDEFB"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.ToolTip>
                            <ToolTip Background="#1976D2"
                                     Foreground="White"
                                     Padding="16,12"
                                     HasDropShadow="True"
                                     Placement="Bottom">
                                <StackPanel MaxWidth="320">
                                    <!-- Başlık -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="🖱️" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Tıklama Geçirgenliği"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </StackPanel>

                                    <!-- Ana Açıklama -->
                                    <TextBlock Text="Bu özellik etkinleştirildiğinde, pencere arkasındaki dosya, klasör ve uygulamalara doğrudan tıklayabilirsiniz."
                                               FontSize="12"
                                               Foreground="#E3F2FD"
                                               TextWrapping="Wrap"
                                               LineHeight="18"
                                               Margin="0,0,0,10"/>

                                    <!-- Nasıl Çalışır -->
                                    <Border Background="#1565C0" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="🔄 Nasıl Çalışır:"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFC107"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock FontSize="11" Foreground="#E1F5FE" TextWrapping="Wrap" LineHeight="16">
                                                <Run Text="✓ Etkin: Pencere şeffaf hale gelir, arkasındaki öğelere tıklayabilirsiniz"/>
                                                <LineBreak/>
                                                <Run Text="✓ Pasif: Normal pencere davranışı, pencere ile etkileşim kurabilirsiniz"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <!-- Önemli Uyarı -->
                                    <Border Background="#D32F2F" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="⚠️ Önemli Bilgi:"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFEBEE"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock FontSize="11" Foreground="#FFCDD2" TextWrapping="Wrap" LineHeight="16">
                                                <Run Text="Bu özellik etkinken pencereyi normal şekilde kullanamayacaksınız!"/>
                                                <LineBreak/>
                                                <Run Text="Kapatmak için ana GUI'deki "/>
                                                <Run Text="'Önizleme (Gizle)'" FontWeight="Bold" Foreground="#FFE0B2"/>
                                                <Run Text=" butonuna basın."/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <!-- İpucu -->
                                    <TextBlock Text="💡 İpucu: Bu özellik özellikle dosya yönetimi yaparken kısayolları görünür tutmak için idealdir."
                                               FontSize="10"
                                               Foreground="#90CAF9"
                                               TextWrapping="Wrap"
                                               FontStyle="Italic"/>
                                </StackPanel>
                            </ToolTip>
                        </Border.ToolTip>

                        <StackPanel Orientation="Horizontal">
                            <!-- Toggle Icon -->
                            <Border Width="16" Height="16" CornerRadius="8" Margin="0,0,6,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsClickThroughEnabled}" Value="True">
                                                <Setter Property="Background" Value="#2196F3"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="🖱️" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Toggle Text -->
                            <TextBlock VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Geçirgen"/>
                                        <Setter Property="FontSize" Value="9"/>
                                        <Setter Property="Foreground" Value="#757575"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsClickThroughEnabled}" Value="True">
                                                <Setter Property="Text" Value="Aktif"/>
                                                <Setter Property="Foreground" Value="#2196F3"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Ana Pencere Senkronizasyon Toggle -->
                    <Border x:Name="SyncWithMainWindowToggle"
                            Background="#F5F5F5"
                            CornerRadius="12"
                            Padding="8,4"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="SyncWithMainWindowToggle_Click"
                            ToolTipService.InitialShowDelay="0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E8F5E8"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsSyncWithMainWindowEnabled}" Value="True">
                                        <Setter Property="Background" Value="#E8F5E8"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsSyncWithMainWindowEnabled}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="#C8E6C9"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.ToolTip>
                            <ToolTip Background="#4CAF50"
                                     Foreground="White"
                                     Padding="16,12"
                                     HasDropShadow="True"
                                     Placement="Bottom">
                                <StackPanel MaxWidth="320">
                                    <!-- Başlık -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="🔗" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="UDF Editörü Senkronizasyonu"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </StackPanel>

                                    <!-- Ana Açıklama -->
                                    <TextBlock Text="Bu özellik etkinleştirildiğinde, önizleme penceresi UDF editörü (imlec.png ile çalışan metin genişletme editörü) ile senkronize hareket eder."
                                               FontSize="12"
                                               Foreground="#E8F5E8"
                                               TextWrapping="Wrap"
                                               LineHeight="18"
                                               Margin="0,0,0,10"/>

                                    <!-- Nasıl Çalışır -->
                                    <Border Background="#388E3C" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="🔄 Nasıl Çalışır:"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFC107"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock FontSize="11" Foreground="#C8E6C9" TextWrapping="Wrap" LineHeight="16">
                                                <Run Text="✓ UDF editörü açıldığında: Önizleme de gösterilir"/>
                                                <LineBreak/>
                                                <Run Text="✓ UDF editörü kapandığında: Önizleme de gizlenir"/>
                                                <LineBreak/>
                                                <Run Text="✓ Metin genişletme sırasında senkronize hareket"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <!-- Önemli Bilgi -->
                                    <Border Background="#2E7D32" CornerRadius="8" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="💡 Önemli Bilgi:"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FFEB3B"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock FontSize="11" Foreground="#A5D6A7" TextWrapping="Wrap" LineHeight="16">
                                                <Run Text="Bu özellik kapatıldığında önizleme penceresi bağımsız hareket eder."/>
                                                <LineBreak/>
                                                <Run Text="Varsayılan: Kapalı (bağımsız hareket)"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ToolTip>
                        </Border.ToolTip>

                        <StackPanel Orientation="Horizontal">
                            <!-- Toggle Circle -->
                            <Border Width="16" Height="16" CornerRadius="8" Margin="0,0,6,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSyncWithMainWindowEnabled}" Value="True">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="✓" FontSize="10" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSyncWithMainWindowEnabled}" Value="True">
                                                    <Setter Property="Opacity" Value="1"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <!-- Toggle Text -->
                            <TextBlock VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Senkron"/>
                                        <Setter Property="FontSize" Value="9"/>
                                        <Setter Property="Foreground" Value="#757575"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSyncWithMainWindowEnabled}" Value="True">
                                                <Setter Property="Text" Value="Aktif"/>
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Minimize Button -->
                    <Button x:Name="MinimizeButton"
                            Content="−"
                            FontSize="12"
                            Width="20"
                            Height="20"
                            VerticalAlignment="Center"
                            Click="MinimizeButton_Click"
                            ToolTip="Küçült"
                            ToolTipService.InitialShowDelay="0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#757575"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="Foreground" Value="#424242"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Search Box - Kompakt -->
            <Grid Grid.Row="1" Margin="0,0,0,4">
                <TextBox x:Name="SearchBox"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="12"
                         Height="32"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         Padding="8,4"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text="Ara..."
                           Foreground="#999999"
                           FontSize="12"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Shortcuts List -->
            <ScrollViewer x:Name="ShortcutsScrollViewer"
                          Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding FilteredShortcuts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ShortcutItemStyle}"
                                    MouseEnter="ShortcutItem_MouseEnter"
                                    MouseLeave="ShortcutItem_MouseLeave"
                                    ToolTipService.InitialShowDelay="0">
                                <Border.ToolTip>
                                    <ToolTip Background="#2C3E50"
                                             Foreground="White"
                                             Padding="8"
                                             HasDropShadow="True"
                                             Placement="Right">
                                        <TextBlock Text="{Binding Expansion}"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300"
                                                   FontSize="12"/>
                                    </ToolTip>
                                </Border.ToolTip>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Key}"
                                               Style="{StaticResource ShortcutKeyStyle}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text=" → "
                                               FontSize="10"
                                               Foreground="#9E9E9E"
                                               VerticalAlignment="Center"
                                               Margin="4,0"/>
                                    <TextBlock Text="{Binding ShortExpansion}"
                                               Style="{StaticResource PreviewTextStyle}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer Controls - Vertical Layout -->
            <StackPanel x:Name="FooterPanel"
                        Grid.Row="3" Orientation="Vertical" Margin="0,4,0,0">
                <Separator Margin="0,0,0,4"/>

                <!-- Opacity Control - Full Width -->
                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="🔍" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Grid.Column="1" Text="Şeffaflık:" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <Slider Grid.Column="2" x:Name="OpacitySlider"
                            Value="{Binding PanelOpacity}"
                            Minimum="0.3" Maximum="1.0"
                            Width="100"
                            Height="18"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="0,1,0,0"
                            ValueChanged="OpacitySlider_ValueChanged"/>
                </Grid>

                <!-- Action Buttons -->
                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Add Shortcut Button -->
                    <Button Grid.Column="0"
                            Content="➕ Kısayol Ekle"
                            FontSize="10"
                            Height="22"
                            HorizontalAlignment="Stretch"
                            Click="AddShortcutButton_Click"
                            ToolTip="Yeni kısayol ekle"
                            ToolTipService.InitialShowDelay="0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Setter Property="Background" Value="#E8F5E8"/>
                                <Setter Property="Foreground" Value="#2E7D32"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C8E6C9"/>
                                        <Setter Property="Foreground" Value="#1B5E20"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Close Button -->
                    <Button Grid.Column="2"
                            Content="✕ Gizle"
                            FontSize="10"
                            Height="22"
                            HorizontalAlignment="Stretch"
                            Click="CloseButton_Click"
                            ToolTip="Önizleme panelini gizle"
                            ToolTipService.InitialShowDelay="0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#757575"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="Foreground" Value="#616161"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </StackPanel>
            </Grid>
        </Border>

        <!-- Modern Popup for Shortcut Key -->
        <Popup x:Name="ShortcutKeyPopup"
               PlacementTarget="{Binding ElementName=ShortcutKeyBorder}"
               Placement="Bottom"
               AllowsTransparency="True"
               PopupAnimation="Fade"
               StaysOpen="False">
            <Border Background="#2C3E50"
                    CornerRadius="12"
                    Padding="16,12"
                    Margin="8">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4"
                                      BlurRadius="12" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel MaxWidth="280">
                    <!-- Başlık -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="⌨️" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Kısayol Genişletme Tuşu"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Ana Açıklama -->
                    <TextBlock Text="Bu tuş kombinasyonu ile yazdığınız kısayolları tam metinlere dönüştürebilirsiniz."
                               FontSize="12"
                               Foreground="#E8F4FD"
                               TextWrapping="Wrap"
                               LineHeight="18"
                               Margin="0,0,0,8"/>

                    <!-- Örnek Kullanım -->
                    <Border Background="#34495E" CornerRadius="6" Padding="8" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="💡 Örnek Kullanım:"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#F39C12"
                                       Margin="0,0,0,4"/>
                            <TextBlock FontSize="11" Foreground="#BDC3C7" TextWrapping="Wrap">
                                <Run Text="1. Bir kısayol yazın (örn: "/>
                                <Run Text="merhaba" FontWeight="Bold" Foreground="#3498DB"/>
                                <Run Text=")"/>
                                <LineBreak/>
                                <Run Text="2. "/>
                                <Run Text="{Binding ActiveTriggerKey, Mode=OneWay}" FontWeight="Bold" Foreground="#2ECC71"/>
                                <Run Text=" tuşuna basın"/>
                                <LineBreak/>
                                <Run Text="3. Kısayol otomatik genişletilir!"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Alt Bilgi -->
                    <TextBlock Text="💡 İpucu: Ayarlar menüsünden farklı tuş kombinasyonları seçebilirsiniz."
                               FontSize="10"
                               Foreground="#95A5A6"
                               TextWrapping="Wrap"
                               FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Modern Popup for Tab Key -->
        <Popup x:Name="TabKeyPopup"
               PlacementTarget="{Binding ElementName=TabKeyBorder}"
               Placement="Bottom"
               AllowsTransparency="True"
               PopupAnimation="Fade"
               StaysOpen="False">
            <Border Background="#1976D2"
                    CornerRadius="12"
                    Padding="16,12"
                    Margin="8">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4"
                                      BlurRadius="12" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel MaxWidth="280">
                    <!-- Başlık -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="⇥" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Tab Tuşu ile Kelime Tamamlama"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Ana Açıklama -->
                    <TextBlock Text="Yazmaya başladığınız kelimeleri Tab tuşu ile akıllı bir şekilde tamamlayabilirsiniz."
                               FontSize="12"
                               Foreground="#E3F2FD"
                               TextWrapping="Wrap"
                               LineHeight="18"
                               Margin="0,0,0,8"/>

                    <!-- Örnek Kullanım -->
                    <Border Background="#1565C0" CornerRadius="6" Padding="8" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="💡 Örnek Kullanım:"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#FFC107"
                                       Margin="0,0,0,4"/>
                            <TextBlock FontSize="11" Foreground="#E1F5FE" TextWrapping="Wrap">
                                <Run Text="1. Bir kelimenin başını yazın (örn: "/>
                                <Run Text="prog" FontWeight="Bold" Foreground="#81C784"/>
                                <Run Text=")"/>
                                <LineBreak/>
                                <Run Text="2. "/>
                                <Run Text="Tab" FontWeight="Bold" Foreground="#FFD54F"/>
                                <Run Text=" tuşuna basın"/>
                                <LineBreak/>
                                <Run Text="3. Kelime tamamlanır ("/>
                                <Run Text="program" FontWeight="Bold" Foreground="#81C784"/>
                                <Run Text=")"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Özellikler -->
                    <Border Background="#0D47A1" CornerRadius="6" Padding="8" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="🚀 Akıllı Özellikler:"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#4FC3F7"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="• Yazım geçmişinizden öğrenir&#10;• En çok kullandığınız kelimeleri önceliklendirir&#10;• Bağlama göre uygun öneriler sunar"
                                       FontSize="10"
                                       Foreground="#B3E5FC"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Alt Bilgi -->
                    <TextBlock Text="💡 İpucu: Kelime tamamlama özelliği kullandıkça daha akıllı hale gelir!"
                               FontSize="10"
                               Foreground="#90CAF9"
                               TextWrapping="Wrap"
                               FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
