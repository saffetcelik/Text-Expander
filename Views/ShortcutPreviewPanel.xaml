<UserControl x:Class="OtomatikMetinGenisletici.Views.ShortcutPreviewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="771" d:DesignWidth="233"
             ToolTipService.InitialShowDelay="0"
             ToolTipService.ShowDuration="10000">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Card Style - Kompakt -->
        <Style x:Key="PreviewCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1"
                                      BlurRadius="4" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Shortcut Item Style - Okunabilir boyut -->
        <Style x:Key="ShortcutItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#FAFBFC"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F4FD"/>
                    <Setter Property="BorderBrush" Value="#90CAF9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Header Style - Kompakt -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#37474F"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Shortcut Key Style - Okunabilir -->
        <Style x:Key="ShortcutKeyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!-- Preview Text Style - Okunabilir -->
        <Style x:Key="PreviewTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="MaxHeight" Value="16"/>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource PreviewCardStyle}" Background="#FAFBFC">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header - Kompakt -->
            <Grid Grid.Row="0" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🔗" FontSize="14" VerticalAlignment="Center" Margin="0,0,3,0"/>
                    <TextBlock Text="Kısayollar" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ShortcutCount, StringFormat='({0})'}"
                               FontSize="9" Foreground="#9E9E9E" VerticalAlignment="Center" Margin="3,0,0,0"/>
                </StackPanel>

                <!-- Minimize Button -->
                <Button x:Name="MinimizeButton"
                        Grid.Column="1"
                        Content="−"
                        FontSize="12"
                        Width="20"
                        Height="20"
                        VerticalAlignment="Center"
                        Click="MinimizeButton_Click"
                        ToolTip="Küçült">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#757575"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Setter Property="Foreground" Value="#424242"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Search Box - Kompakt -->
            <TextBox Grid.Row="1"
                     x:Name="SearchBox"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBoxStyle}"
                     FontSize="9"
                     Margin="0,0,0,4"
                     Height="20">
                <ui:ControlHelper.PlaceholderText>Ara...</ui:ControlHelper.PlaceholderText>
            </TextBox>

            <!-- Shortcuts List -->
            <ScrollViewer x:Name="ShortcutsScrollViewer"
                          Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding FilteredShortcuts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ShortcutItemStyle}"
                                    MouseEnter="ShortcutItem_MouseEnter"
                                    MouseLeave="ShortcutItem_MouseLeave">
                                <Border.ToolTip>
                                    <ToolTip Background="#2C3E50"
                                             Foreground="White"
                                             Padding="8"
                                             HasDropShadow="True"
                                             Placement="Right">
                                        <TextBlock Text="{Binding Expansion}"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="300"
                                                   FontSize="12"/>
                                    </ToolTip>
                                </Border.ToolTip>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Key}"
                                               Style="{StaticResource ShortcutKeyStyle}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text=" → "
                                               FontSize="10"
                                               Foreground="#9E9E9E"
                                               VerticalAlignment="Center"
                                               Margin="4,0"/>
                                    <TextBlock Text="{Binding ShortExpansion}"
                                               Style="{StaticResource PreviewTextStyle}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer Controls - Vertical Layout -->
            <StackPanel x:Name="FooterPanel"
                        Grid.Row="3" Orientation="Vertical" Margin="0,4,0,0">
                <Separator Margin="0,0,0,4"/>

                <!-- Opacity Control - Full Width -->
                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="🔍" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Grid.Column="1" Text="Şeffaflık:" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <Slider Grid.Column="2" x:Name="OpacitySlider"
                            Value="{Binding PanelOpacity}"
                            Minimum="0.3" Maximum="1.0"
                            Width="100"
                            Height="18"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="0,1,0,0"
                            ValueChanged="OpacitySlider_ValueChanged"/>
                </Grid>

                <!-- Close Button - Full Width -->
                <Button Content="✕ Gizle"
                        FontSize="10"
                        Height="22"
                        HorizontalAlignment="Stretch"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Setter Property="Foreground" Value="#757575"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Setter Property="Foreground" Value="#616161"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
