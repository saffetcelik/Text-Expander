<Window x:Class="OtomatikMetinGenisletici.Views.PreviewOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview"
        SizeToContent="WidthAndHeight"
        MinWidth="100" MaxWidth="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Focusable="False"
        ResizeMode="NoResize">

    <!-- Minimal Modern Container -->
    <Border Name="MainBorder"
            CornerRadius="8"
            Opacity="0.95"
            Margin="4">

        <!-- Minimal Background -->
        <Border.Background>
            <SolidColorBrush Color="#2D2D30"/>
        </Border.Background>

        <!-- Subtle Border -->
        <Border.BorderBrush>
            <SolidColorBrush Color="#007ACC"/>
        </Border.BorderBrush>
        <Border.BorderThickness>1</Border.BorderThickness>

        <!-- Subtle Shadow -->
        <Border.Effect>
            <DropShadowEffect Color="#000000"
                              Direction="270"
                              ShadowDepth="4"
                              BlurRadius="12"
                              Opacity="0.3"/>
        </Border.Effect>

        <!-- Minimal Content -->
        <Border Padding="12,8">
            <!-- Sadece Ã–neri Metni -->
            <TextBlock Name="PreviewTextBlock"
                       Text=""
                       FontFamily="Segoe UI"
                       FontSize="14"
                       FontWeight="Normal"
                       Foreground="#F0F0F0"
                       TextWrapping="Wrap"
                       MaxWidth="400"
                       LineHeight="20"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       TextOptions.TextFormattingMode="Display"
                       TextOptions.TextRenderingMode="ClearType"/>
        </Border>
    </Border>
</Window>
