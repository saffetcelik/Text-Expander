<Window x:Class="OtomatikMetinGenisletici.Views.PreviewOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview"
        SizeToContent="WidthAndHeight"
        MinWidth="200" MaxWidth="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Focusable="False"
        ResizeMode="NoResize">

    <Border Background="#2D2D30"
            BorderBrush="#007ACC"
            BorderThickness="0,0,0,3"
            CornerRadius="12"
            Opacity="0.95"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="270"
                              ShadowDepth="12"
                              BlurRadius="20"
                              Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <!-- Modern tasarım - Header kaldırıldı -->

            <!-- Modern Content - Temiz tasarım -->
            <Grid>
                <Border Padding="20,16">
                    <TextBlock Name="PreviewTextBlock"
                               Text=""
                               FontFamily="Segoe UI"
                               FontSize="15"
                               Foreground="#E8E8E8"
                               TextWrapping="Wrap"
                               MaxWidth="550"
                               LineHeight="22"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Gizle Butonu - Sağ Alt Köşe -->
                <Button Name="HideButton"
                        Content="✕"
                        Width="20"
                        Height="20"
                        Background="#333333"
                        BorderBrush="Transparent"
                        Foreground="#CCCCCC"
                        FontSize="10"
                        FontWeight="Bold"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,8,8"
                        Cursor="Hand"
                        ToolTip="Önizlemeyi Gizle"
                        Click="HideButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="2">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF4444"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
