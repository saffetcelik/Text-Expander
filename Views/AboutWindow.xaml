<Window x:Class="OtomatikMetinGenisletici.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="ℹ️ Hakkında"
        Height="650" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
        ui:WindowHelper.UseModernWindowStyle="True">
    
    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="480">
                <!-- App Icon & Title -->
                <StackPanel HorizontalAlignment="Center" Margin="0,24,0,32">
                    <Ellipse Width="80" Height="80"
                             Fill="White"
                             Margin="0,0,0,16">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="2" BlurRadius="8"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock Text="⚡"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,-64,0,48"/>

                    <TextBlock Text="Otomatik Metin Genişletici"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Sürüm 2.0.0 (.NET 8)"
                               FontSize="16"
                               Foreground="White"
                               Opacity="0.9"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"/>
                </StackPanel>

                <!-- Main Info Card -->
                <Border Background="White"
                        CornerRadius="16"
                        Padding="32"
                        Width="440">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.15" ShadowDepth="3" BlurRadius="15"/>
                    </Border.Effect>

                    <StackPanel>
                        <!-- Developer Section -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="👨‍💻 Geliştirici"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#667eea"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Saffet Çelik"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="#2c3e50"
                                       Margin="0,0,0,0"/>
                        </StackPanel>

                        <!-- Contact Info Section -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="📞 İletişim"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#667eea"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>

                            <!-- Contact Cards -->
                            <StackPanel>
                                <!-- Email Card -->
                                <Border Background="#f8f9fa"
                                        CornerRadius="8"
                                        Padding="12,8"
                                        Margin="0,0,0,8"
                                        Cursor="Hand"
                                        MouseLeftButtonUp="Email_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#e9ecef"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="📧" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="iletisim@saffetcelik.com.tr"
                                                   FontSize="14"
                                                   Foreground="#2196F3"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- GitHub Card -->
                                <Border Background="#f8f9fa"
                                        CornerRadius="8"
                                        Padding="12,8"
                                        Margin="0,0,0,8"
                                        Cursor="Hand"
                                        MouseLeftButtonUp="GitHub_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#e9ecef"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="🐙" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="github.com/saffetcelik"
                                                   FontSize="14"
                                                   Foreground="#333"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Instagram Card -->
                                <Border Background="#f8f9fa"
                                        CornerRadius="8"
                                        Padding="12,8"
                                        Margin="0,0,0,0"
                                        Cursor="Hand"
                                        MouseLeftButtonUp="Instagram_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#e9ecef"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="📷" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="instagram.com/kamucoder"
                                                   FontSize="14"
                                                   Foreground="#E4405F"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Features Section -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="🚀 Özellikler"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#667eea"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,8">
                                    <TextBlock Text="⚡" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Hızlı Genişletme" FontSize="12" FontWeight="Medium" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,0,8">
                                    <TextBlock Text="🧠" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Akıllı Öneriler" FontSize="12" FontWeight="Medium" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,8,8">
                                    <TextBlock Text="⌨️" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Özel Tuşlar" FontSize="12" FontWeight="Medium" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="8,0,0,8">
                                    <TextBlock Text="🪟" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Pencere Filtresi" FontSize="12" FontWeight="Medium" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,8,0">
                                    <TextBlock Text="📚" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Öğrenme Sistemi" FontSize="12" FontWeight="Medium" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="2" Margin="8,0,0,0">
                                    <TextBlock Text="🎨" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Modern Arayüz" FontSize="12" FontWeight="Medium" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Tech Info -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Modern .NET 8 teknolojileri ile geliştirilmiştir"
                                       FontSize="12"
                                       Foreground="#6c757d"
                                       HorizontalAlignment="Center"
                                       FontStyle="Italic"
                                       Margin="0,0,0,8"/>

                            <!-- Copyright -->
                            <TextBlock Text="© 2025 Saffet Çelik - Tüm hakları saklıdır"
                                       FontSize="11"
                                       Foreground="#6c757d"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Close Button -->
                <Border Background="White"
                        CornerRadius="12"
                        Margin="0,24,0,24"
                        Cursor="Hand"
                        MouseLeftButtonUp="CloseButton_Click">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f8f9fa"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="24,12">
                        <TextBlock Text="✅" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Tamam"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#667eea"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
