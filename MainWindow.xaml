                                                    <TextBlock Grid.Column="1" Text="{Binding UsageCount}"
                                                               Foreground="{StaticResource PrimaryBrush}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
